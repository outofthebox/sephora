:coffee
  $(document).ready ->
    $("#modal-home").modal() unless $.cookie("modal-nuevo-registro")

    $("#btn_mail_enviar").live "click", (e) ->
      e.preventDefault()
      $("#modal-home").modal()

    $("button.close-modal").live "click", (e) ->
      e.preventDefault()
      $("#modal-home").modal("hide")
    

