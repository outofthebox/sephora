#main{:vista=>"banners"}
  .bs-docs-section.col-12.col-md-12.col-lg-12{:role => "main"}
    .page-header
      .pull-right=link_to("New", new_admin_animation_path, {class: "btn btn-info"})
      %h2#btn-groups
        Animaciones
      .clearfix
    .page-body
      .contengoTabla.row-fluid
        %table.table.table-bordered.table-striped.table-hover
          %thead 
            %tr
              %th.text-center Animacion
              %th.text-center Descripcion
              %th.text-center Valida De
              %th.text-center Valida Hasta
              %th.ver
                %i.glyphicon.glyphicon-eye-open
              %th.editar
                %i.glyphicon.glyphicon-pencil
              %th.eliminar
                %i.glyphicon.glyphicon-remove
          %tbody 
          - for animation in @animations
            %tr
              %td.text-center= animation.name
              %td.text-center= animation.description
              %td.text-center= animation.valid_from.to_s
              %td.text-center= animation.valid_to.to_s
              %td
              %td
              %td