%head
  %meta{:charset => "UTF-8"}
  %title
    #{"#{yield(:titulo)} | " if content_for?(:titulo)} Sephora
  %meta{:content => "user-scalable=0, initial-scale=1.0", :name=>"viewport"}/
  %meta{:content => "#{yield(:titulo)} | Sephora México", :property => "og:title"}
  %link{ :rel => "shortcut icon", :href => "/favicon.ico", :type => "image/x-icon"}/
  %meta{:name => "description", :content => yield(:descripcion)}
  %meta{:content => yield(:url), :property => "og:url"}
  %meta{:content => "Sephora México", :property => "og:site_name"}
  %meta{:content => yield(:imagen), :property => "og:image"}
  = stylesheet_link_tag :mobile
  = csrf_meta_tags
  = favicon_link_tag 'mobile/iconos/76x76.png', :rel => 'apple-touch-icon', :sizes => "76x76", :type => 'image/png'
  = favicon_link_tag 'mobile/iconos/120x120.png', :rel => 'apple-touch-icon', :sizes => "120x120", :type => 'image/png'
  = favicon_link_tag 'mobile/iconos/152x152.png', :rel => 'apple-touch-icon', :sizes => "152x152", :type => 'image/png'
%body{:style => ""}
  .header
    %ul
      %li.entrar
        - if current_usuario.nil?
          %a{:href => new_usuario_session_path} ENTRAR
        - else
          .nombre
            %a{:href => "#"}
              Bienvenido
              = current_usuario.email
      %li.logo
        =link_to image_tag("mobile/home/sephora_logo_mobile.png"), m_home_path
      %li.favs
        - if current_usuario
          =link_to 'MIS FAVS', m_favoritos_path
  .wrapper
    = yield
  .footer
    %ul.submenu
      %li
        =link_to 'Legal',m_legal_path
      %li.atras.text-center
        %a{:href => m_home_path}
          = image_tag('mobile/home/flecha_regreso.png')
        .clearfix
  = javascript_include_tag :mobile
