%head
  %script{:async => "async", :src => "https://sephoramexico.s3.amazonaws.com/settings/search_engine.js", :type => "text/javascript"}
  %meta{:charset => "UTF-8"}
  %title
    #{"#{yield(:titulo)} | " if content_for?(:titulo)} Sephora
  %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
  %meta{:content => "#{yield(:titulo)} | Sephora México", :property => "og:title"}
  %link{ :rel => "shortcut icon", :href => "/favicon.ico", :type => "image/x-icon"}/
  %meta{:name => "description", :content => yield(:descripcion)}
  %meta{:content => yield(:url), :property => "og:url"}
  %meta{:content => "Sephora México", :property => "og:site_name"}
  %meta{:content => yield(:imagen), :property => "og:image"}
  %meta{:name=>"viewport", :content=>"width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no"}

  %link{:rel=>"apple-touch-icon", :href=>image_path("mobile/iconos/touch-icon-iphone.png")}
  %link{:rel=>"apple-touch-icon", :sizes=>"76x76", :href=>image_path("mobile/iconos/76x76.png")}
  %link{:rel=>"apple-touch-icon", :sizes=>"120x120", :href=>image_path("mobile/iconos/120x120.png")}
  %link{:rel=>"apple-touch-icon", :sizes=>"152x152", :href=>image_path("mobile/iconos/152x152.png")}

  = stylesheet_link_tag :mobile
  = stylesheet_link_tag :"idangerous.swiper"
  = javascript_include_tag :jquery
  = javascript_include_tag :bootstrap
  = javascript_include_tag :"idangerous.swiper"
  = javascript_include_tag :mobile
  = csrf_meta_tags
  %meta{:content => "qCft4n7tHfODiCl-UWgEd_uquba_MLlevA9txPjkYkk", :name => "google-site-verification"}
%body
  #lightbox.animated
  = render(:partial => "mobile/layouts/menu")
  #wrapper
    #header
      %table.header_cont
        %tr
          %td.icono.menu
            %i.glyphicon.glyphicon-th
          %td.icono.logo=link_to image_tag("logo.gif"), m_home_path
          %td.icono.login
            = link_to image_tag("mobile/home/corazon_fav_rojo.png"), m_usuario_perfil_path
    #main
      = yield
    #footer
