!!!
%html
  %head
    %title= content_for?(:title) ? yield(:title) : "Sephora Lover Admin"
    = javascript_include_tag :jquery
    = javascript_include_tag :"jquery-ui"
    = javascript_include_tag :administracion

    = stylesheet_link_tag "administracion"
    = csrf_meta_tag

  %body
    =link_to image_tag('logo.gif'), "#", {:class=>"logo"}
    #header
      %ul.menu
        %li=link_to 'Animaciones', admin_animations_path
        %li=link_to 'Carruseles', admin_animation_carousels_path
        %li=link_to 'Banners', admin_banners_path
        %li=link_to 'Landings', admin_landings_path
        %li=link_to 'Events', admin_events_path
        %li=link_to 'Store Events', admin_store_events_path
        %li=link_to 'Descontinuar', admin_descontinuados_path
        %li=link_to 'Precios', admin_prices_path
        %li=link_to 'Subir CSV', admin_files_path
      .clear
    = yield
