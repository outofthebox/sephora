%head
  %meta{:charset => "UTF-8"}
  %link{ :rel => "shortcut icon", :href => "favicon.ico", :type => "image/x-icon"}/
  %title
    Sephora Beta
  = javascript_include_tag :modernizr
  = stylesheet_link_tag :beta
  = csrf_meta_tags
%body
  #beta
    .logo
    - if request.fullpath == '/usuarios/sign_in'
      .combo
        = yield
    - else
      = yield
  -if ENV['GOOGLE_ANALYTICS_KEY']
    :javascript
      window._gaq = [['_setAccount','#{ENV['GOOGLE_ANALYTICS_KEY']}'],['_trackPageview'],['_trackPageLoadTime']];
      Modernizr.load({
        load: ('https:' == location.protocol ? '//ssl' : '//www') + '.google-analytics.com/ga.js'
      });
