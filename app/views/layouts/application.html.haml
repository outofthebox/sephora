%head
  %meta{:charset => "UTF-8"}
  %link{ :rel => "shortcut icon", :href => "/favicon.ico", :type => "image/x-icon"}/
  - if current_page?('/')
    %meta{:name => "description", :content => "Explora la biblioteca de productos de belleza más grande de latinoamérica. Cosméticos - Maquillaje - Skincare - Perfumes y más de exclusivas marcas."}
  - elsif content_for?(:descripcion)
    %meta{:name => "description", :content => yield(:descripcion)}
  %title
    #{"#{yield(:titulo)} | " if content_for?(:titulo)} Sephora
  = javascript_include_tag :modernizr
  = stylesheet_link_tag :application
  = csrf_meta_tags
%body
  #head-sup
  #wrap
    %header#encabezado
      #contenme
        #search
          = form_for :buscar, { :url => busqueda_path, :method => :get } do |f|
            %p.nowrap
              .table
                .tcell.t95
                  = f.text_field :q, :class => 'input', :placeholder  => "BUSCAR", :value => "#{(params[:buscar][:q]) unless params[:buscar].nil?}"
                .tcell.t5
                  = f.submit '', :class => 'submit'
        %a{ :href => "/" }
          #logo
      %nav#menu
        %ul.nobullet.nolist
          %li
            %a{ :href => "/categoria/maquillaje"}
              Maquillaje
            %ul.nobullet.submenu
              - submenu('maquillaje').each do |subcategoria|
                %li
                  = link_to subcategoria.nombre, categoria_ver_path(subcategoria.slug)
          %li
            %a{ :href => "/categoria/skincare"}
              Skincare
            %ul.nobullet.submenu
              - submenu('skincare').each do |subcategoria|
                %li
                  = link_to subcategoria.nombre, categoria_ver_path(subcategoria.slug)
          %li
            %a{ :href => "/categoria/fragancias"}
              Fragancias
            %ul.nobullet.submenu
              - submenu('fragancias').each do |subcategoria|
                %li
                  = link_to subcategoria.nombre, categoria_ver_path(subcategoria.slug)
          %li
            %a{ :href => "/categoria/bano-y-cuerpo"}
              Baño / Cuerpo
            %ul.nobullet.submenu
              - submenu('bano-y-cuerpo').each do |subcategoria|
                %li
                  = link_to subcategoria.nombre, categoria_ver_path(subcategoria.slug)
          %li
            %a{ :href => "/categoria/cabello"}
              Cabello
            %ul.nobullet.submenu
              - submenu('cabello').each do |subcategoria|
                %li
                  = link_to subcategoria.nombre, categoria_ver_path(subcategoria.slug)
          %li
            %a{ :href => "/categoria/categoria-general"}
              Accesorios
            %ul.nobullet.submenu
              - submenu('categoria-general').each do |subcategoria|
                %li
                  = link_to subcategoria.nombre, categoria_ver_path(subcategoria.slug)
          %li
            %a{ :href => "/categoria/hombres"}
              Hombres
            %ul.nobullet.submenu
              - submenu('hombres').each do |subcategoria|
                %li
                  = link_to subcategoria.nombre, categoria_ver_path(subcategoria.slug)
          %li
            %a{ :href => "/obsequios"}
              Obsequios
          %li
            %a{ :href => "/soluciones"}
              Soluciones
          %li
            %a{ :href => "/tu-lista"}
              Tu Lista
          .select
            - if @marcas_all and @marcas_all.any?
              .trigger
                Marcas 
                %span.icon 
              %select#marcas
                %option
                  MARCAS
                - @marcas_all.each do |marca|
                  %option{ :value => "/marca/#{marca.slug}" }
                    = marca.marca

    = yield

    #footer
      #social
        %ul.nolist
          %li.noborder
            %a#fb{:href => "http://www.facebook.com/SephoraMX", :target => "_blank"}
            %a{:href => "http://www.facebook.com/SephoraMX", :target => "_blank"}
