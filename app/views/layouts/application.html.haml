          %li
            %a#pn{:href => "http://pinterest.com/sephoramx/", :target => "_blank"}
            %a{:href => "http://pinterest.com/sephoramx/", :target => "_blank"}
              %p.social Pinterest
              %p.leyenda INSPÍRATE
              %p.leyenda2 con NUESTROS
              %p.leyenda3
                boards
