%head
  %meta{:charset => "UTF-8"}
  %link{ :rel => "shortcut icon", :href => "favicon.ico", :type => "image/x-icon"}/
  %title
    #{"#{yield(:titulo)} | " if content_for?(:titulo)} Sephora
  = javascript_include_tag :modernizr
  = stylesheet_link_tag :application
  = csrf_meta_tags
%body
  #head-sup.table.full
  #wrap
    %header#encabezado
      #contenme
        #search
          = form_for :buscar, { :url => '/buscar' } do |f|
            %p.nowrap
              = f.text_field :buscar, :class => 'input'
              = f.submit '', :class => 'submit'
        %a{ :href => "/" }
          #logo
      %nav#menu
        %ul.nobullet.nolist
          %li
            %a{ :href => "/categoria/maquillaje"}
              Maquillaje
          %li
            %a{ :href => "/categoria/skincare"}
              Skincare
          %li
            %a{ :href => "/categoria/fragancias"}
              Fragancias
          %li
            %a{ :href => "/categoria/cuerpo"}
              Baño / Cuerpo
          %li
            %a{ :href => "/categoria/cabello"}
              Cabello
          %li
            %a{ :href => "/categoria/accesorios"}
              Accesorios
          %li
            %a{ :href => "/categoria/hombres"}
              Hombres
          %li
            %a{ :href => "/categoria/obsequios"}
              Obsequios
          %li
            %a{ :href => "/categoria/soluciones"}
              Soluciones
          %li
            %a{ :href => "/tu-lista"}
              Tu Lista
          %li
            %a{ :href => "/tendencias"}
              Tendencias
          %li.select
            - if @marcas_all and @marcas_all.any?
              %select#marcas
                %option
                  MARCAS
                - @marcas_all.each do |marca|
                  %option{ :value => "/marca/#{marca.slug}" }
                    = marca.marca.upcase

    = yield

    #footer
      #social
        %ul.nolist
          %li.noborder
            #fb
            %p.social Facebook
            %p.leyenda PROMOCIONES
            %p.leyenda2 EXCLUSIVAS
            %p.leyenda3
              para nuestros fans
              %span.flecha
                ►
          %li
            #pn
            %p.social Pinterest
            %p.leyenda INSPÍRATE
            %p.leyenda2 con NUESTROS
            %p.leyenda3
              boards
              %span.flecha
                ►
          %li
            #tw
            %p.social Twitter
            %p.leyenda SIGUE
            %p.leyenda2 NUESTRAS BEAUTY
            %p.leyenda3
              news al intante
              %span.flecha
                ►
          %li
            #yt
            %p.social YouTube
            %p.leyenda
              MIRA
              %span NUESTRAS
            %p.leyenda2 últimas tendencias
            %p.leyenda3
              en nuestro canal
              %span.flecha
                ►

      #sus-cata
        .table.full
          .tcell.t33
            %span#mail
            %p
              SUSCRÍBETE Y RECIBE LOS SEPHORA HIGHLIGHTS
              #registrar
          .tcell.t33
            %p.pad2 NUESTRAS TIENDAS
            =link_to image_tag('footer/descubre.jpg'), tiendas_path
          .tcell.t33
            %p.pad
              DESCARGA<br />EL CATÁLOGO ONLINE
              #descargar
      #sephora-en
        %p
          SEPHORA en:
          #bg
          #gp
      #footin
        #links
          %ul.nobullet.nolist.seplist
            %li Contacto
            %li Mapa del sitio
            %li Poĺítica de privacidad
            %li Empleo
        #internacional

  = javascript_include_tag :application
