      #sus-cata
        .table.full
          .tcell.t37.suscripcion
            %span#mail
            %p
              ENTÉRATE DE EVENTOS Y PROMOCIONES EXCLUSIVAS
              = form_for Suscripcion.new, :url => "/suscripcion#suscripcion" do |f|
                .table
                  .tcell.t95
                    = f.email_field :email, :placeholder => "E-Mail", :class => "texto"
                  .tcell.t5
                    = image_submit_tag("flecha_internacional.png")
          .tcell.t33
            %p.pad2
              NUESTRAS TIENDAS
            .footer-boton
              %a{:href => '/tiendas'} Descúbrelas
          .tcell.t30
            %p.pad
              DESCARGA<br />EL CATÁLOGO ONLINE
            .footer-boton
              %a{:href => 'http://www.pollock.mx/Flipbook/index.html', :target => '_blank'} Descarga aquí
      #sephora-en
        %p
          SEPHORA en:
          %a#bg{:href => "http://sephoramexico.blogspot.mx/", :target => "_blank"}
          %a#gp{:href => "https://plus.google.com/109652284724347281502/posts", :target => "_blank"}
      #footin
        #links
          %ul.nobullet.nolist.seplist
            %li Contacto
            %li Mapa del sitio
            %li
              =link_to "Poĺítica de privacidad", politicas_path
            %li Empleo
        #internacional
          %a.middle{:href => 'http://www.sephora.com/international/international.jsp', :target => '_blank'} Internacional
          %span.icon

  = javascript_include_tag :application
  %script{:src => "//assets.pinterest.com/js/pinit.js", :type => "text/javascript"}
