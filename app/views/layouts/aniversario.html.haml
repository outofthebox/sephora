!!! 5
/[if lt IE 7]
  %html(lang="en-us" class="no-js ie6")
/[if IE 7]
  %html(lang="en-us" class="no-js ie7")
/[if IE 8]
  %html(lang="en-us" class="no-js ie8")
/[if (gt IE 9)|!(IE)]
  %html(lang="en-us" class="no-js")
%head
  %title= @title || 'Sephora'
  %meta(charset="utf-8")
  %meta(http-equiv="X-UA-Compatible" content="IE=Edge;chrome=1")
  %meta(name="viewport" content="width=device-width, initial-scale=1.0")
  %meta(name="description" content="Productos cosm√©ticos, maquillaje, fragancias, accesorios y todo para la belleza.")
  %link(rel="shortcut icon" href="/assets/favicon.ico")
  = stylesheet_link_tag "application"
  = javascript_include_tag "modernizr2.js"
  = csrf_meta_tags
  -# = yield :head
%body
  = yield
  #terminos
    =link_to "Terminos y condiciones", aniversario_terminos_path
  :javascript
    Modernizr.load({
      load: ['//connect.facebook.net/es_LA/all.js#xfbml=1&appId=141773072581182',
        '//platform.twitter.com/widgets.js']
    });
  -if ENV['GOOGLE_ANALYTICS_KEY']
    :javascript
      window._gaq = [['_setAccount','#{ENV['GOOGLE_ANALYTICS_KEY']}'],['_trackPageview'],['_trackPageLoadTime']];
      Modernizr.load({
        load: ('https:' == location.protocol ? '//ssl' : '//www') + '.google-analytics.com/ga.js'
      });
  = javascript_include_tag "application"
  
  =yield :javascripts
  /[if lt IE 7]
    %script(src="//ajax.googleapis.com/ajax/libs/chrome-frame/1.0.3/CFInstall.min.js")
    :javascript
      window.attachEvent('onload',function(){CFInstall.check({mode:'overlay'})})
