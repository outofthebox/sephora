.jotnao
  .ima
    = image_tag 'mobile/hotnow.png'
.hotnow
- provide :titulo, @seccion.nombre.split(' ').map {|w| w.capitalize }.join(' ')
.vethotnow{ :class => "seccion-#{@seccion.try(:nombre).try(:parameterize)}"}
  - if @contenido and (seccion_productos = @contenido.producto_seccion) and seccion_productos.any?
    - if @contenido.cover_file_name
      .cover
  .touchslider
    .touchslider-viewport
      %div
        - seccion_productos.each_with_index do |seccion_producto, i|
          - producto = seccion_producto.producto
          %li
            .table.full
              .info
                %h3
                  = producto.marca.marca
                %h5
                  = producto.nombre_real.empty? ? producto.nombre : producto.nombre_real
              .picture
                =link_to image_tag(producto.foto.url(:grande),{:style => "width:310px"}), m_producto_path(producto.slug)
