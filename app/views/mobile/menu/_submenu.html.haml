		})

	:coffee
		$ ->
			$("#submenu > li a").click ->
				id = $(this).attr("id")
				$inner_menu = $("#contengo-menusflotantes ."+id+" ul.inner-menu")
				$menu_open = $("#contengo-menusflotantes ul.open");
				$lightbox = $("#lightbox")


				if $inner_menu.hasClass("open")
					$inner_menu.addClass("bounceOutRight").delay(500).queue (n) ->
						$inner_menu.removeClass("open").removeClass("bounceOutRight").removeClass("bounceInLeft")
						$lightbox.removeClass("fadeIn").addClass("fadeOut").delay(500).queue (m) ->
							$lightbox.removeClass("open").removeClass("fadeOut")
							m()
						n()
				else
					if $menu_open.size() > 0
						$menu_open.addClass("bounceOutRight").delay(500).queue (n) ->
							$menu_open.removeClass("open").removeClass("bounceOutRight").removeClass("bounceInLeft")
							$inner_menu.addClass("open").addClass("bounceInLeft")
							n()
					else
						$inner_menu.addClass("open").addClass("bounceInLeft")
						$lightbox.removeClass("fadeOut").addClass("open").addClass("fadeIn")


	:coffee
		$ ->
			$("#lightbox").click ->
				$lightbox = $(this)
				$menu_open = $("#contengo-menusflotantes ul.open");
				if $menu_open.size() > 0
					$menu_open.addClass("bounceOutRight").delay(500).queue (n) ->
						$menu_open.removeClass("open")
						n()
					$lightbox.removeClass("fadeIn").removeClass("fadeOut").removeClass("open")