= form_for @eventotienda do |f|
  %p
    = f.label :tienda_id
    %br
    =f.collection_select(:tienda_id, @tiendas, :id, :nombre, {:prompt => "Selecciona una tienda" })
  %p
    = f.label :nombre
    %br
    = f.text_field :nombre
  %p
    = f.label :horario
    %br
    = f.text_area :horario
  %p
    = f.label :descripcion
    %br
    = f.text_area :descripcion
  %p
    = f.label :informacion
    %br
    = f.text_area :informacion
  %p
    = f.submit 'Enviar'
