- provide :titulo, @categoria.nombre
%section#categoria
  %h2
    = @categoria.nombre
  .table.full
    .contizq.tcell.t25
      - if @subcategorias && @subcategorias.any?
        %ul
          - @subcategorias.each do |subcategoria|
            %li
              = link_to subcategoria.nombre, categoria_ver_path(subcategoria.slug)
    .contder.tcell.t75
      .contenedor
        %div{:style=>"width: 768px; height: 250px; border: 1px solid red;"}
      .catalogo
        - if @productos and @productos.any?
          %ul.nobullet.nolist
            - @productos.each do |producto|
              %li
                = link_to image_tag(producto.foto.url(:chico)), producto_ver_path(producto.slug)
                %h4 #{link_to producto.nombre, producto_ver_path(producto.slug)}
                %p #{number_to_currency producto.precio}
        .navegacion
          %span ver
          %select
            %option 20 por página
          %span acomodar por:
          %select
            %option más vendidos
          .numeros
            %span 1 2 ...7
            %p 379 artículos
  - unless @categoria.depth
