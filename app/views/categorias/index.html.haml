- provide :titulo, "Categorías"
%section#categorias
  = link_to "Nueva categoría", new_categoria_path
  = render_tree @categorias do |categoria, child|
    %li
      = link_to categoria.nombre, categoria_ver_path(categoria.slug)
      -if can? :manage, categoria
        %small
          (#{link_to "Editar", edit_categoria_path(categoria.id)})
      %br
      %small
        Slug: #{categoria.slug}
    = child
