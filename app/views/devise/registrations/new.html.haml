.row
  .page-header
  .col-lg-6.col-sm-12
    .panel.panel-default
      .panel-heading 
        Registrate
      .panel-body
        = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
          = devise_error_messages!
          %div{:class=>"form-group"}
            = f.label :Nombre
            = f.text_field :nombre, {:class=>"form-control"}
          %div{:class=>"form-group"}
            = f.label :Apellido
            = f.text_field :apellido, {:class=>"form-control"}
          %div{:class=>"form-group"}
            = f.label :Correo
            = f.email_field :email, {:class=>"form-control"}
          %div{:class=>"form-group"}
            = f.label "Fecha de Cumpleaños"
            = f.text_field :cumple, {:class=>"form-control", :type => "date"}
          %div{:class=>"form-group"}
            = f.label :Contraseña
            = f.password_field :password, {:class=>"form-control"}
          %div{:class=>"form-group"}
            = f.label :Confirmar_Contraseña
            = f.password_field :password_confirmation, {:class=>"form-control"}
          %div{:class=>"form-group"}
            = f.label "Codigo Postal"
            = f.text_field :cp, {:class=>"form-control"}
          %div{:style=>"margin-bottom:20px; display:block;"}
            = f.submit "Registrarse", {:class=>"btn btn-block"}
  .col-lg-6.col-sm-12
    = render :partial => "devise/shared/links"
