    #download
      .table.full
        .tcell.t20
          %ul.append
        .tcell.t40.descar
          %a.iphone{:href=>'#'}
            iPhone
          %br
          %a.ipad{:href=>'#'}
            iPad
          %a.escritorio{:href=>'#', :target => 'blank'}
            GUARDAR EN ESCRITORIO
