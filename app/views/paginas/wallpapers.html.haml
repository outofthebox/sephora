          %a.back{:href=>'#'}
            X
          .contenedor
            = form_for @wallpaper, :url => '/holiday/wallpapers#wallpapers' do |f|
              %h3 ENVIAR POR CORREO
              = form_error @wallpaper, :email
              = f.email_field :email, :placeholder => "e-mail", :class => "texto"
              = f.text_field :imagen, :id => 'imagen', :style => 'visibility: hidden;'
              %br
              = f.submit "Enviar"
