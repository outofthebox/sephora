- content_for :titulo, "Personalidad #{params[:personalidad].titleize}"
- content_for :url, request.original_url
- content_for :imagen, "#{request.protocol}#{request.host_with_port}" + image_path("colorful/#{params[:personalidad]}_social.jpg")
#personalidad{:class => "#{params[:personalidad]}"}
  .info
    .logo
    %hr
    .descripcion
      - case @datass
        - when "hipster"
          - content_for :descripcion, "Única y original es la esencia que define tu personalidad, logrando con los toques perfectos un estilo desenfadado, combinando las tendencias naturales con un pop de color para sorprender con un look inigualable. ¡Inspírate y echa a volar tu imaginación!"
