    = image_tag("animacion/agosto/beauty-must-haves.png", {class: "animacion-must-have"})
    #slider-wrap
      %ul.nobullet.nolist#hotnow.jcarousel-skin-tango
        - seccion_productos = @contenido.producto_seccion.limit(6)
