#slider-home.full
  #producto.tcell.t25.middle
    %ul.nobullet.nolist.home
      - seccion_productos = @contenido.producto_seccion.limit(3)
      - seccion_productos.each do |seccion_producto|
        - producto = seccion_producto.producto
        %li
          .producto-imagen
            =image_tag 'home/hotnow.jpg'
            =link_to image_tag(producto.foto.url(:chico)), producto_ver_path(producto.slug)
          .producto-info
            %p
              = producto.marca.marca
            .producto-p
              %p
                =producto.nombre.split(' ').map {|w| w.capitalize }.join(' ')
  #poster.tcell.t75
    .contenedor
      .slider
        .prox
          %p 1/2
        .ante
          %p 2/2
        %a.diapositiva{:href=>'http://www.facebook.com/SephoraMX/app_292555694189146', :target => 'blank'}
          =image_tag "home/1.jpg"
        %a.diapositiva
          =image_tag "home/2.jpg"
