- provide :titulo, @producto.marca.marca + " - " + @producto.nombre.split(' ').map {|w| w.capitalize }.join(' ')
%section#producto
  - if can? :edit, @producto
    = link_to "Editar", edit_producto_path(@producto.id)
  .table.full
    .product.tcell.t35
      =link_to image_tag(@producto.foto.url(:normal)), @producto.foto.url(:original)
      %p.vistagrande
        =link_to "vista grande", @producto.foto.url(:original)
      .compartir
        %p compartir
        %a.twitter-share-button{"data-count" => "none", "data-lang" => "es", "data-via" => "SephoraMX", :href => "https://twitter.com/share"} Twittear
        :javascript
          !function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");
        %a.pin-it-button{"count-layout" => "none", :target => "_blank", :href => "http://pinterest.com/pin/create/button/?url=http://#{request.host+request.fullpath}&media=#{@producto.foto.url(:original)}&description=#{@producto.marca.marca}%0A#{@producto.nombre}%0A#{@producto.descripcion}"}
          %img{:border => "0", :src => "//assets.pinterest.com/images/PinExt.png", :title => "Pin It"}
        %iframe{:allowTransparency => "true", :frameborder => "0", :scrolling => "no", :src => "//www.facebook.com/plugins/like.php?href=http://#{request.host+request.fullpath}send=false&layout=button_count&show_faces=false&action=like&colorscheme=light&font&height=21&appId=262507837197981", :style => "border:none; overflow:hidden; width:130px; height:21px;"}
    .tcell.t65
      .marca
        - unless @producto.marca.logo_file_size.nil?
          = image_tag @producto.marca.logo.url(:grande)
      .info
        %span.marcab
          =@producto.marca.marca
        %span.precio
          $#{@producto.precio}
      .producto
        =@producto.nombre
      .descripcion
        %h3 DESCRIPCIÓN
        %span.borde
        %p
          =@producto.descripcion
        %p.mas
          ver más
          %span
            ▼
      - if @producto.presentaciones and @producto.presentaciones.any?
        %ul.nolist.nobullet
          - @producto.presentaciones.each do |presentacion|
            %li
              = image_tag presentacion.foto.url(:chico)
      - if @productos_relacionados and @productos_relacionados.any?
        .interesar
          %h3 te puede interesar
          %ul.nobullet.nolist
            - @productos_relacionados.each do |producto|
              %li
                = link_to image_tag(producto.foto.url(:chico)), producto_ver_path(producto.slug)
                %h4 #{producto.marca.marca}
                %h4 #{link_to producto.nombre, producto_ver_path(producto.slug)}
                %p #{number_to_currency producto.precio}
